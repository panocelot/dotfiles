set $mod Mod4

#font pango:Ubuntu Mono Nerd Font 10.3
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec foot 

# kill focused window
bindsym $mod+Shift+q kill
bindsym $mod+F4 exec wkill.sh

# change focus
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+semicolon focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+semicolon move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
#bindsym $mod+s layout stacking
#bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

bindsym $mod+c sticky toggle

bindsym $mod+1 workspace '~/'
bindsym $mod+2 workspace 'Aa'
bindsym $mod+3 workspace 'Bb'
bindsym $mod+4 workspace 'Cc'
bindsym $mod+5 workspace 'Dd'

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace '~/'
bindsym $mod+Shift+2 move container to workspace 'Aa'
bindsym $mod+Shift+3 move container to workspace 'Bb'
bindsym $mod+Shift+4 move container to workspace 'Cc'
bindsym $mod+Shift+5 move container to workspace 'Dd'

# reload the configuration file
bindsym $mod+Shift+c reload
bindsym $mod+Shift+e exec sway exit 

set $rz "Resize Mode"
mode $rz {
        # These bindings trigger as soon as you enter the resize mode
        bindsym Left resize shrink width 5 px or 5 ppt
        bindsym Down resize grow height 5 px or 5 ppt
        bindsym Up resize shrink height 5 px or 5 ppt
        bindsym Right resize grow width 5 px or 5 ppt
        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode $rz

bindsym $mod+Shift+h exec sudo poweroff 
bindsym $mod+Shift+r exec sudo reboot


bindsym $mod+d exec "rofi -combi-modi window,drun,run -show drun"
bindsym $mod+t exec thunar
#bindsym $mod+x move workspace to output right



#exec
exec "cd /home/sn && ./autostart"

bindsym  Alt+F6 exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym Alt+F7 exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym Alt+F8 exec pactl set-sink-volume @DEFAULT_SINK@ +5%


#-- I3 GAPS ZONE
smart_gaps off
smart_borders on
gaps inner 6

#I3 GAPS ZONE --

workspace_auto_back_and_forth yes
for_window [class=".*"] border pixel 4
for_window [app_id="pavucontrol"] floating enable
for_window [app_id="org.keepassxc.KeePassXC"] floating enable
for_window [app_id="pavucontrol"] resize set width 200 ppt




